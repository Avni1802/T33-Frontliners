{

  "manifest_version": 2,
  "name": "tts",
  "version": "1.0",

  "description": "An Extension to help the differently abled people to access education in these COVID-Time",
  "homepage_url": "https://github.com/Hackdotslash/T33-Frontliners",
  "icons": {
    "48": "icons/tts-48.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "downloads",
    "storage",
    "notifications"
    
  ],

  "browser_action": {
    "default_icon": "icons/tts-32.png",
    "default_title": "index",
    "default_popup": "popup/index.html"
  },

  "content_scripts":[
      {
          "matches":["*://meet.google.com*"],
          "scripts": ["index.js"]


      },
      {
          "matches":["*://youtube*"],
          "scripts": ["index.js"]
      }


  ]


}

